### ######################################## ###
### Systemd service configuration for PiTona ###
### ######################################## ###

[Unit]
Description=PiTona webserver
Documentation=https://github.com/tntmeijs/pitona

[Service]
Type=simple
RestartSec=10
Restart=always
ExecStart=/home/pi/pitona

[Install]
WantedBy=multi-user.target
